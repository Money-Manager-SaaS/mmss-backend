{
   "compilerOptions": {
      "target": "es5",
      "module": "commonjs",
      "moduleResolution": "node",
      "outDir": "dist",
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "sourceMap": true,
      "allowSyntheticDefaultImports": true,
      "resolveJsonModule": true,
      "downlevelIteration": true
   },
   "include": [
      "src/**/*"
   ],
   "exclude": [
      "**/*.test.ts",
      "**/*.spec.ts",
      "jest.setup.ts",
      "src/migration"
   ]
}
